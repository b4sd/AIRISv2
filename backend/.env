# Development environment variables
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://dev:dev123@localhost:5432/voice_reading_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="development-jwt-secret-key-change-this-in-production-minimum-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OpenAI API (add your key)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# File Storage (MinIO for development)
S3_BUCKET="voice-reading-files"
S3_REGION="us-east-1"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_ENDPOINT="http://localhost:9000"

# Email Service (optional for development)
EMAIL_PROVIDER="sendgrid"
EMAIL_API_KEY=""
EMAIL_FROM="dev@voicereading.local"

# Monitoring
LOG_LEVEL="debug"
ENABLE_METRICS="true"

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW="15m"